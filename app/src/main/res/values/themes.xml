<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyHeavyEquipment" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyHeavyEquipment" parent="Base.Theme.MyHeavyEquipment" />

    <style name="Theme.MyHeavyEquipment.Main" parent="Base.Theme.MyHeavyEquipment">
        <item name="android:statusBarColor">@color/gray</item>
    </style>

    <style name="ActionBar" parent="Theme.MyHeavyEquipment.Main">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorSecondary">@color/orange</item>
    </style>

</resources>